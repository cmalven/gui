{
  /* Visit https://aka.ms/tsconfig.json to read more about this file */

  "compilerOptions": {
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "./dist/",
    "emitDeclarationOnly": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true
  }
}
